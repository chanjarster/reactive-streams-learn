<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p --- [%-10.10t] %-10.10logger{10} : %m%n"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>
